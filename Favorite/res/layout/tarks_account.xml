<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/input_id_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="15"
        android:hint="@string/id"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/input_password_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_id_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:ems="15"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:singleLine="true" >
    </EditText>

    <Button
        android:id="@+id/forgot_id_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/orange_button"
        android:ems="9"
        android:textColor="#FFFFFF"
        android:text="@string/find_account_info" />

    <Button
        android:id="@+id/register_id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/forgot_id_password_button"
        android:background="@drawable/orange_button"
          android:textColor="#FFFFFF"
        android:text="@string/sign_up"/>

</RelativeLayout>